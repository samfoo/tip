#!/usr/bin/env ruby

require 'trollop'

require './lib/git'

COMMANDS = %w(tip wag)

cmd = ARGV.shift

Repository.at "." do |repo|
  case cmd
  when "tip"
    Vote.up! repo, *ARGV
    puts "Tipped the hat to #{ARGV.count} files"
  when "wag"
    Vote.down! repo, *ARGV
    puts "Waged the finger at #{ARGV.count} files"
  end
end

